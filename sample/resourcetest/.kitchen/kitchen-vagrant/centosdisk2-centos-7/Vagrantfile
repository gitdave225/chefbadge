Vagrant.configure("2") do |c|
  c.berkshelf.enabled = false if Vagrant.has_plugin?("vagrant-berkshelf")
  c.vm.box = "centos/7"
  c.vm.hostname = "centosdisk2-centos-7.vagrantup.com"
  c.vm.synced_folder ".", "/vagrant", disabled: true
  c.vm.provider :virtualbox do |p|
    p.name = "kitchen-resourcetest-centosdisk2-centos-7"
    p.customize ["createhd", "--filename", "d:/VMs/disk2.vdi", "--size", 1024]
    p.customize ["storagectl", :id, "--name", "IDE", "--controller", "PIIX4", "--portcount", 2]
    p.customize ["storageattach", :id, "--storagectl", "IDE", "--port", 1, "--device", 1, "--type", "hdd", "--medium", "d:/VMs/disk2.vdi"]
  end
end
